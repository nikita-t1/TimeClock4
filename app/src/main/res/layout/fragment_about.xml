<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context="com.studio.timeclock4.fragments.AboutFragment">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iconView"
            android:scaleType="fitCenter"
            android:scaleY="0"
            android:scaleX="0"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_launcher"/>

    </LinearLayout>

    <com.yarolegovich.mp.MaterialPreferenceScreen
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <com.yarolegovich.mp.MaterialPreferenceCategory
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:mpc_title="@string/app"
            app:mpc_title_color="@color/black">

            <com.yarolegovich.mp.MaterialStandardPreference
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mp_icon="@drawable/ic_application"
                app:mp_summary="@string/versionName"
                app:mp_title="@string/version" />

            <com.yarolegovich.mp.MaterialStandardPreference
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mp_icon="@drawable/ic_source_branch"
                app:mp_summary="@string/type"
                app:mp_title="Build Variant" />

            <com.yarolegovich.mp.MaterialStandardPreference
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mp_icon="@drawable/ic_android_studio"
                app:mp_summary="@string/applicationId"
                app:mp_title="Application ID" />

            <com.yarolegovich.mp.MaterialStandardPreference
                android:id="@+id/update_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mp_icon="@drawable/ic_update"
                app:mp_summary="https://raw.githubusercontent.com/nikita-t1/update/master/update.json"
                app:mp_title="Check for Updates" />

        </com.yarolegovich.mp.MaterialPreferenceCategory>

    </com.yarolegovich.mp.MaterialPreferenceScreen>

</androidx.constraintlayout.widget.ConstraintLayout>
