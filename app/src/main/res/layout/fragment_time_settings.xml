<?xml version="1.0" encoding="utf-8"?>
<com.yarolegovich.mp.MaterialPreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="24dp"
    tools:context="com.studio.timeclock4.fragments.TimeSettingsFragment">

    <com.yarolegovich.mp.MaterialStandardPreference
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mp_title="@string/work_time_per_day"
        android:id="@+id/working_time"/>

    <com.yarolegovich.mp.MaterialStandardPreference
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mp_title="@string/work_time_per_week"
        android:id="@+id/working_time_week"/>

    <com.yarolegovich.mp.MaterialStandardPreference
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mp_title="@string/pause_time"
        android:id="@+id/pause_time"/>

    <com.yarolegovich.mp.MaterialStandardPreference
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mp_title="@string/flex_time_account"
        android:id="@+id/flex_account"/>

    <com.yarolegovich.mp.MaterialStandardPreference
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mp_title="@string/vacation"
        android:id="@+id/vacation"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.chip.ChipGroup
            app:singleLine="true"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                app:chipBackgroundColor="@color/bg_chip_state_list"
                android:checkable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/monday"/>

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                app:chipBackgroundColor="@color/bg_chip_state_list"
                android:checkable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tuesday"/>

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                app:chipBackgroundColor="@color/bg_chip_state_list"
                android:checkable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wednesday"/>

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                app:chipBackgroundColor="@color/bg_chip_state_list"
                android:checkable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/thursday"/>

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                app:chipBackgroundColor="@color/bg_chip_state_list"
                android:checkable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/friday"/>

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                app:chipBackgroundColor="@color/bg_chip_state_list"
                android:checkable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/saturday"/>

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                app:chipBackgroundColor="@color/bg_chip_state_list"
                android:checkable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sunday"/>

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

</com.yarolegovich.mp.MaterialPreferenceScreen>
