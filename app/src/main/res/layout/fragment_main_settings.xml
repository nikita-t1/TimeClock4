<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yarolegovich.mp.MaterialPreferenceScreen
        android:id="@+id/preference_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.yarolegovich.mp.MaterialPreferenceCategory
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mpc_title="Database">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/saving_swt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="12dp"
                android:paddingVertical="14dp"
                android:text="Enable Saving" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/db_recreation_swt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="12dp"
                android:paddingVertical="14dp"
                android:text="Enable Database Recreationnnnn" />



            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/frames_swt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="12dp"
                android:paddingVertical="14dp"
                android:text="Enable Frames" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/anim_swt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="12dp"
                android:paddingVertical="14dp"
                android:text="Enable dayButton anim" />

        </com.yarolegovich.mp.MaterialPreferenceCategory>

        <com.yarolegovich.mp.MaterialPreferenceCategory
            app:mpc_title="titttte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.yarolegovich.mp.MaterialStandardPreference
                android:layout_width="match_parent"
                android:layout_height="32dp"
                app:mp_icon="@drawable/ic_circle"
                app:mp_title="drfgsdfg"/>

            <com.yarolegovich.mp.MaterialRightIconPreference
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mp_icon="@drawable/ic_calendar_edit"
                app:mp_title="sadfsf"/>


        </com.yarolegovich.mp.MaterialPreferenceCategory>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name_text_input"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hintttttttttt" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.yarolegovich.mp.MaterialPreferenceCategory
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mpc_title="title">

            <com.yarolegovich.mp.MaterialSwitchPreference
                android:id="@+id/pref_auto_loc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mp_default_value="true"
                app:mp_key="true"
                app:mp_title="titlen" />

            <com.yarolegovich.mp.MaterialEditTextPreference
                android:id="@+id/pref_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mp_default_value="true"
                app:mp_key="true"
                app:mp_show_value="onRight"
                app:mp_title="strititleetion" />

        </com.yarolegovich.mp.MaterialPreferenceCategory>


        <com.yarolegovich.mp.MaterialPreferenceCategory
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mpc_title="titleing/help_improve">

            <com.yarolegovich.mp.MaterialRightIconPreference
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mp_icon="@drawable/ic_calendar"
                app:mp_icon_tint="@color/blue"
                app:mp_title="titlerate_the_lib" />

            <com.yarolegovich.mp.MaterialRightIconPreference
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mp_icon="@drawable/ic_calendar"
                app:mp_icon_tint="@color/green"
                app:mp_title="title/donate" />

        </com.yarolegovich.mp.MaterialPreferenceCategory>



    </com.yarolegovich.mp.MaterialPreferenceScreen>




    <Button
        android:backgroundTint="@color/white"
        android:id="@+id/rebirth_btn"
        android:paddingHorizontal="128dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/red"
        android:text="RESTAAAAAAAAART" />

</androidx.constraintlayout.widget.ConstraintLayout>

