<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="@color/blue"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingVertical="12dp"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_absence_type"
            android:layout_marginVertical="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/absence_type"
            app:layout_constraintBottom_toTopOf="@+id/tv_absence_title"
            app:layout_constraintEnd_toStartOf="@id/tv_absence_duration"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_absence_title"
            android:layout_marginVertical="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Meidera"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_absence_dates"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_absence_type" />

        <TextView
            android:id="@+id/tv_absence_dates"
            android:layout_marginVertical="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="12.06 - 21.06.2020"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_absence_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_absence_duration" />

        <TextView
            android:id="@+id/tv_absence_duration"
            android:layout_marginVertical="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="91 Tage"
            app:layout_constraintBottom_toTopOf="@+id/tv_absence_dates"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_absence_type"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>