<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/anticipate_interpolator</item>
        <item name="android:windowExitAnimation">@android:anim/cycle_interpolator</item>
    </style>

    <style name="DayButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>

        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintDimensionRatio">1</item>
        <item name="layout_constraintHorizontal_bias">0.5</item>

        <item name="android:layout_margin">4dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:elevation">8dp</item>
        <item name="android:fontFamily">@font/droid_sans_mono</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">8dp</item>
    </style>


    <style name="HomeDetailsFragmentAnimation" >
        <item name="android:windowEnterAnimation">@anim/anim_in_home_details_fragment</item>
        <item name="android:windowExitAnimation">@anim/anim_out_home_details_fragment</item>
    </style>

    <!--AlertView-->
    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
